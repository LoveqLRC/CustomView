<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="loveq.com.customview.ui.view.ColorTrackActivity">

    <loveq.com.customview.widget.view.ColorTrackTextView
        android:id="@+id/cttv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="loveqrcloveqrcloveqrc"
        android:textColor="@color/colorPrimary"
        app:track_textColor="@color/colorAccent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="LeftToRight"
        android:text="LeftToRight"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="RightToLeft"
        android:text="RightToLeft"/>

    <LinearLayout
        android:id="@+id/ll_indicate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_color_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
